<div class="modal-dialog modal-lg modal-dialog-center">
	<div class="modal-content">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-
			label="Close">
				<span aria-hidden="true">×</span>
			</button>
		</div>
		<div class="modal-body">
			<div class="row">
				<div class="col-md-10 col-md-offset-1">
        <%= form_with(model:@user, url:attendances_update_overtime_notice_user_path(@user), method: :patch, local:true) do |f| %>
          <% @attendances.each do |day| %>
          <p class="request-title"><%= "【#{day.user.name}からの残業申請】" %></p>
          <table class="table table-bordered table-striped table-condensed" id="overtime-notice-table" %>
            <thead>
		          <th>日付</th>
			        <th>曜日</th>
			        <th>終了予定時間</th>
			        <th>指定勤務終了時間</th>
			        <th>時間外時間</th>
			        <th>業務処理内容</th>
			        <th>指示者確認
				        <div class="maru size_small black">
					        <div class="letter">印</div>
				        </div>
			        </th>
			        <th>変更</th>
			        <th>勤務を確認する</th>
		        </thead>
		
		        <%= f.fields_for "attendances[]", day do |d| %>
		        <tbody>
			        <td><%=l(day.worked_on, format: :short) %></td>
			        <td><%=$days_of_the_week[day.worked_on.wday] %></td>
			        <td><%=l(day.scheduled_end_time, format: :time) %></td>
		    	    <td><%=l(day.user.designated_work_end_time, format: :time) %></td>
		 	        <td>
		 	        	<% if day.scheduled_end_time.present? && ! day.tomorrow? %>
		 	        	  <%=working_times(day.user.designated_work_end_time, day.scheduled_end_time) %>
		 	        	<% elsif day.scheduled_end_time.present? && day.tomorrow? %>
		 	        	  <%=working_times_tomorrow(day.user.designated_work_end_time, day.scheduled_end_time) %>
		 	        	<% end %>
		 	        </td>
			        <td><%=day.business_outline %></td>
			        <td><%=d.select:instructor_reply, {'なし':1, '承認':2, '否認':3},{include_blank:"申請中"}, {class:"form-control"} %></td>
			        <td><%=d.check_box :change, id:"change" %></td>
			        <td><%=link_to "勤怠を確認する", user_path(day.user), class:"btn btn-primary"%></td>
			      </tabody>
		        <% end %>
	        </table>
	        <% end %>
	        <%= f.submit "変更を送信する", class:"btn btn-primary" %>
        <% end %>
        </div>
			</div>
		</div>
	</div>
</div>
