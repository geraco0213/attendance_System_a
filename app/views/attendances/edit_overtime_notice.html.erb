<%= form_with(model:@user, url:attendances_update_overtime_notice_user_path(@user), method: :patch) do |f| %>
  <% @attendances.each do |day| %>
  <%= day.user.name %>
  
  <table class="table table-bordered table-condensed" id="overtime-notice-table" %>
    <thead>
		  <th>日付</th>
			<th>曜日</th>
			<th>終了予定時間</th>
			<th>指定勤務終了時間</th>
			<th>時間外時間</th>
			<th>業務処理内容</th>
			<th>指示者確認
				<div class="maru size_small black">
					<div class="letter">印</div>
				</div>
			</th>
			<th>変更</th>
			<th>勤務を確認する</th>
		</thead>
		
		<%= f.fields_for "attendances[]", day do |d| %>
		<%= d.hidden_field :user_id, :value => day.user.id %>
	  </tbody>		
		<tbody>
			<td><%=l(day.worked_on, format: :short) %></td>
			<td><%=$days_of_the_week[day.worked_on.wday] %></td>
			<td><%=l(day.scheduled_end_time, format: :time) %></td>
			<td><%=l(@user.fixed_finish, format: :time) %></td>
			<td><%=working_times(@user.fixed_finish, day.scheduled_end_time) %></td>
			<td><%=day.business_outline %></td>
			<td><%=d.select:instructor_reply, {'なし':1, '申請中':2, '承認':3, '否認':4},{include_blank:true}, {class:"form-control"} %></td>
			<td><%=d.check_box :change, id:"change" %></td>
			<td><%=link_to "勤怠を確認する", user_path(day.user), class:"btn btn-primary"%></td>
		<% end %>
	</table>
	<% end %>
	<%= f.submit "変更を送信する", class:"btn btn-primary" %>
<% end %>