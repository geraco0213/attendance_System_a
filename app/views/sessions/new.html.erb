<% provide(:title, "Login") %>
<h1>ログイン</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%=form_with(scope: :session,url: login_path, local:true) do |f| %>
      <%=f.label:メールアドレス, class: "label-form" %>
      <%=f.email_field:email, class: "form-control" %>
      
      <%=f.label:パスワード, class: "label-form" %>
      <%=f.password_field:password, class:"form-control" %>
      
      <%=f.label:remmeber_me, class: "checkbox inline checkbox-login", for: "remember-me" do %>
        <%=f.check_box:remember_me, id:"remember_me" %>
        <span>ログイン状態を記録する</span>
      <% end %>
      
      <%=f.submit "ログイン", class:"btn btn-block btn-primary btn-form" %>
    <% end %>
    <p>
      ユーザー登録がまだの方は<%=link_to"こちら",signup_path %>
    </p>
  </div>
</div>
