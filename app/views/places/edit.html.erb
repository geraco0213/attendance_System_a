<% provide(:title, "更新") %>
<div class="row">
  <div class="col-md-6 col-md-offset-3" >

  <%=form_with(model:@place, local:true) do |f| %>
    <%=render 'shared/error_messages', object:f.object %>
  
    <%=f.label:number, class:"label-form" %>
    <%=f.number_field:number, class:"form-control" %>
  
    <%=f.label:name, class:"label-form" %>
    <%=f.text_field:naeme, class:"form-control" %>
  
    <%=f.label:working_style, class:"label-form" %>
    <%=f.text_field:working_style, class:"form-control" %>
  
    <%=f.submit "更新", class:"btn btn-primary btn-block btn-form" %>
  <% end %>
  </div>
</div>