<% provide(:title, @user.name) %>
  <table class="table table-bordered" id="user-info-table">  <%# trの高さが気になる #%>
    <tbody>
      <tr>
        <td>
        <%=link_to "←", user_path(date:@first_day.prev_month), class: "btn btn-primary btn-change" %><span class="time-table-title"><%=l(@first_day, format: :middle) %> 時間管理表</span><%=link_to "→", user_path(date:@first_day.next_month), class: "btn btn-primary btn-change" %>
        </td>
        <td>
        指定勤務開始時間   <%= l(@user.fixed_start, format: :time) %>
        指定勤務終了時間   <%= l(@user.fixed_finish, format: :time) %>
        </td>
        <td colspan="3">基本時間   <%= format_basic_info(@user.basic_time) %></td>
        <td>初日   <%=l(@first_day, format: :shortA) %></td>
      </tr>
      <tr>
        <td>所属   <%= @user.department?? @user.department : "未所属" %></td>
        <td>氏名   <%=@user.name %></td>
        <td>コード</td>
        <td></td>
        <td>出勤日数   <%= @worked_sum %>日</td>
        <td>締め   <%=l(@last_day, format: :shortA) %></td>
      </tr>
    </tbody>
  </table>
  
  <div class="btn-wrapper">
    <%=link_to "勤怠を編集", attendances_edit_one_month_user_path(date:@first_day), class: "btn btn-primary" %>
  </div>
  
  <table class="table table-bordered table-striped" id="user-attendance-table" >
    <thead>
      <tr>
        <th rowspan="3">残業申請</th>
        <th rowspan="3">日付</th>
        <th rowspan="3">曜日</th>
        <th colspan="8">【実績】</th>  <%# ３行目のthの数も含める#%>
        <th colspan="5">所定外勤務</th>
      </tr>
      <tr>
        <th colspan="3">出社</th>
        <th colspan="3">退社</th>
        <th rowspan="2">在社時間</th>
        <th rowspan="2">備考</th>
        <th colspan="2">終了予定時間</th>
        <th rowspan="2">時間外時間</th>
        <th rowspan="2">業務処理内容</th>
        <th rowspan="2">指示者確認✔</th>　
      </tr>
      <tr>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
      </tr>
    </thead>
    <tbody>
      <% @attendances.each do |day| %>
        <tr>
          <td><%=link_to "残業申請", '#', class:"btn btn-primary" %></td>
          <td><%=l(day.worked_on, format: :short) %></td>
          <td><%=$days_of_the_week[day.worked_on.wday] %></td>
          <td><%=l(day.started_at, format: :hour) if day.started_at.present? %></td>
          <td><%=l(day.started_at, format: :minute) if day.started_at.present? %></td>
          <td>
            <% if btn_text=attendance_state(day) %>
              <%=link_to "#{btn_text}",user_attendance_path(@user,day), method: :patch, class: "btn btn-primary btn-register" %>
            <% end %>
          </td>
          <td><%=l(day.finished_at, format: :hour) if day.finished_at.present? %></td>
          <td><%=l(day.finished_at, format: :minute) if day.finished_at.present? %></td>
          <td></td>
          <td>
            <% if day.started_at.present? && day.finished_at.present? %>
              <%=str_times=working_times(day.started_at, day.finished_at) %>
              <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
            <% end %>
          </td>
          <td><%= day.note %></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="2"></td>
        <td colspan="6"></td>
        <td><%= format("%.2f", @total_working_times.to_f) %></td>
        <td colspan="6"></td>
      </tr>
    </tfoot>
  </table>
  
  <!-- 残業申請フォーム -->
    <%= @attendances.each do |day| %>
        <h3>残業申請</h3>
        <%= form_with(model:day, url: '#', method: :post) do |f| %>
        <%= f.hidden_field :id, :value => day.id %> <!-- attendancesテーブルのidを渡す -->
        <%= f.hidden_field :user_id, :value => @user.id %>
          <table class="table table-bordered table-striped table-condensed">
            <thead>
              <tr>
                <th>日付</th>
                <th>曜日</th>
                <th>終了時間（必須）</th>
                <th>業務内容</th>
                <th>確認（必須）</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <!-- 日付 -->
                <td><%= day.worked_on %></td>
                <!-- 曜日 -->
                <td><%= $days_of_the_week[day.worked_on.wday] %></td>
                <!-- 終了時間 -->
                <td><%= f.time_field :scheduled_end_time, class: 'form-control' %> </td>
                <!-- 業務内容 -->
                <td><%= f.text_field :business_outline, class: 'form-control' %></td>
                <!-- 確認 -->
                <td><%= f.collection_select(:indicater_test, @superior, :name, :name, {include_blank:"上長を選択して下さい"}, {class: "form-control", required: true }) %></td>
              </tr>
            </tbody>
          </table>
          <%= f.submit "残業を申請する", class: "btn btn-sm btn-primary" %>
        <% end %>
    <% end %>



    