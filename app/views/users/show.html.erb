<% provide(:title, @user.name) %>
  <table class="table table-bordered" id="user-info-table">  <%# trの高さが気になる #%>
    <tbody>
      <tr>
        <td>
        <%=link_to "←", user_path(date:@first_day.prev_month), class: "btn btn-primary btn-change" %><span class="time-table-title"><%=l(@first_day, format: :middle) %> 時間管理表</span><%=link_to "→", user_path(date:@first_day.next_month), class: "btn btn-primary btn-change" %>
        </td>
        <td>
        指定勤務開始時間   <%= l(@user.designated_work_start_time, format: :time) %>
        指定勤務終了時間   <%= l(@user.designated_work_finish_time, format: :time) %>
        </td>
        <td colspan="3">基本時間   <%= format_basic_info(@user.basic_work_time) %></td>
        <td>初日   <%=l(@first_day, format: :shortA) %></td>
      </tr>
      <tr>
        <td>所属   <%= @user.affiliation?? @user.affiliation : "未所属" %></td>
        <td>氏名   <%=@user.name %></td>
        <td>コード</td>
        <td></td>
        <td>出勤日数   <%= @worked_sum %>日</td>
        <td>締め   <%=l(@last_day, format: :shortA) %></td>
      </tr>
    </tbody>
  </table>
  <!--上長のページの場合は、以下に申請を見るページへのリンク-->
  <% if current_user.superior? && current_user?(@user) %>
    <% if @comp_requested_attendances.count>0 %>
      <%=link_to "【所属長承認のお知らせ】", attendances_edit_comp_notice_user_path, remote:true, class:"notice-sentence"%>
      <span class="notice-sentence"><%="#{@comp_requested_attendances.count}件の通知があります" %></span>
    <% else %>
      <p class="notice-sentence">【所属長承認のお知らせ】０件の通知があります</p>
    <% end %>
    <% if @one_month_requested_attendances.count>0 %>
      <%=link_to "【勤怠編集のお知らせ】", attendances_edit_one_month_notice_user_path, remote:true, class:"notice-sentence"%>
      <span class="notice-sentence"><%="#{@one_month_requested_attendances.count}件の通知があります" %></span>
    <% else %>
      <p class="notice-sentence">【勤怠編集のお知らせ】０件の通知があります</p>
    <% end %>
    <% if @requested_attendances.count>0 %>
      <%=link_to "【残業申請のお知らせ】", attendances_edit_overtime_notice_user_path, remote:true,class:"notice-sentence"%>
      <span class="notice-sentence"><%="#{@requested_attendances.count}件の通知があります" %></span>
    <% else %>
      <p class="notice-sentence">【残業申請のお知らせ】０件の通知があります</p>
    <% end %>
  <% end %>
  <!--ボタン各種-->
  <div class="btn-wrapper">
    <% if current_user?(@user) %>
      <%=link_to "勤怠を編集", attendances_edit_one_month_request_user_path(date:@first_day), class: "btn btn-primary" %>
      <%=link_to "勤怠修正ログ(承認済)", attendances_history_user_path(@user), class: "btn btn-primary" %>
    <% end %>
  </div>
  
  <table class="table table-bordered table-striped" id="user-attendance-table" >
    <thead>
      <tr>
        <th rowspan="3">残業申請</th>
        <th rowspan="3">日付</th>
        <th rowspan="3">曜日</th>
        <th colspan="8">【実績】</th>
        <th colspan="5">所定外勤務</th>
      </tr>
      <tr>
        <th colspan="3">出社</th>
        <th colspan="3">退社</th>
        <th rowspan="2">在社時間</th>
        <th rowspan="2">備考</th>
        <th colspan="2">終了予定時間</th>
        <th rowspan="2">時間外時間</th>
        <th rowspan="2">業務処理内容</th>
        <th rowspan="2">指示者確認
          <div class="maru size_small black">
            <div class="letter">印</div>
          </div>
        </th>　
      </tr>
      <tr>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
      </tr>
    </thead>
    <tbody>
      <% @attendances.each do |day| %>
        <tr>
          <td><%=link_to "残業申請", edit_overtime_request_user_attendance_path(@user,day), remote:true,class:"btn btn-primary" %></td>
          <td><%=l(day.worked_on, format: :short) %></td>
          <td><%=$days_of_the_week[day.worked_on.wday] %></td>
          <td>
            <% if day.instructor_one_month_test.blank? %>
              <%=l(day.started_at, format: :hour) if day.started_at.present? %>
            <% else %>
              <%=l(day.started_at, format: :hour) %>
            <% end %>
          </td>
          <td>
            <% if day.instructor_one_month_test.blank? %>
              <%=l(day.started_at, format: :minute) if day.started_at.present? %>
            <% else%>
              <%=l(day.started_at, format: :minute) %>
            <% end %>
          </td>
          <td>
            <% if btn_text=attendance_state(day) %>
              <%=link_to "#{btn_text}",user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-register" %>
            <% end %>
          </td>
          <td>
            <% if day.instructor_one_month_test.blank? %>
              <%=l(day.finished_at, format: :hour) if day.finished_at.present? %>
            <% else %>
              <%=l(day.finished_at, format: :hour) %>
            <% end %>
          </td>
          <td>
            <% if day.instructor_one_month_test.blank? %>
              <%=l(day.finished_at, format: :minute) if day.finished_at.present? %>
            <% else %>
              <%=l(day.finished_at, format: :minute) %>
            <% end %>
          </td>
          <td></td>
          <td>
            <% if day.instructor_one_month_test.blank? %>
              <% if day.started_at.present? && day.finished_at.present? %>
                <%=str_times=working_times(day.started_at, day.finished_at) %>
                <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
              <% end %>
            <% else %>
              <% if day.started_at.present? && day.finished_at.present? %>
                <%=str_times=working_times(day.started_at, day.finished_at) %>
                <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
              <% end %>
            <% end %>
          </td>
          <td><%= day.note %></td>
          <td><%=l(day.scheduled_end_time, format: :hour) if day.scheduled_end_time.present? %></td>
          <td><%=l(day.scheduled_end_time, format: :minute) if day.scheduled_end_time.present? %></td>
          <td><%=working_times(day.user.designated_work_finish_time, day.scheduled_end_time) if day.scheduled_end_time.present? %></td>
          <td><%=day.business_outline %></td>
          <td>
            
            <% if day.instructor_test.present? && ! day.change? %>
              <%=day.instructor_test %>に残業申請中
            <% elsif day.change? %>
              <% if day.instructor_reply==2%>
                残業承認済
              <% elsif day.instructor_reply==3%>
                残業否認
              <% elsif day.instructor_reply==1%>
                <%=day.instructor_test %>に残業申請中
              <% elsif day.instructor_reply==4%>
                <%=day.instructor_test %>に残業申請中
              <% end %>
            <% end %>
    
            <% if day.instructor_one_month_test.present? && ! day.change_one_month? %>
              <%=day.instructor_one_month_test %>に勤怠編集申請中
            <% elsif day.change_one_month? %>
              <% if day.instructor_one_month_reply==2%>
                勤怠編集承認済
              <% elsif day.instructor_one_month_reply==3%>
                勤怠編集否認
              <% elsif day.instructor_one_month_reply==1%>
                <%=day.instructor_one_month_test %>に残業申請中
              <% elsif day.instructor_one_month_reply==4%>
                <%=day.instructor_one_month_test %>に残業申請中
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="2"></td>
        <td colspan="6"></td>
        <td><%= format("%.2f", @total_working_times.to_f) %></td>
        <td colspan="6"></td>
        <td>
          <% if @attendance.instructor_comp_test.blank? %>
            所属長承認　未
          <% elsif @attendance.instructor_comp_test.present? && ! @attendance.change_comp? %>
            <%=@attendance.instructor_comp_test %>に勤怠申請中
          <% elsif @attendance.change_comp? %>
            <% if @attendance.instructor_comp_reply==2%>
              勤怠承認済
            <% elsif @attendance.instructor_comp_reply==3%>
              勤怠否認
            <% elsif @attendance.instructor_comp_reply==1%>
              <%=@attendance.instructor_comp_test %>に勤怠申請中
            <% elsif @attendance.instructor_reply==4%>
              <%=@attendance.instructor_comp_test %>に勤怠申請中
            <% end %>
          <% end %>
          <%=form_with(model:@attendance, url:update_comp_request_user_attendance_path(@user, @attendance), method: :patch, local:true) do |f| %>
            <table class="table table-bordered table-striped">
              <thead>
                <th>日付</th>
                <th>指示者確認</th>
               </thead>
               <tbody>
                 <td><%=l(@attendance.worked_on, format: :short) %></td>
                 <td><%= f.collection_select(:instructor_comp_test, @superior,:name, :name,{include_blank:true}, {class: "form-control"}) %></td>
              
               </tbody>
            </table>
          <%=f.submit "申請", class:"btn btn-primary"%>
          <% end %>
        </td>
      </tr>
    </tfoot>
  </table>

